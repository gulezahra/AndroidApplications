<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">#119D97</item>
        <!-- PrimaryDark theme color of the app (sets background color of app top bar) -->
        <item name="colorPrimaryDark">#0F8F8B</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">#119D97</item>
    </style>

    <!-- Text theme for Team Name. -->
    <style name="TeamNameTextTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_horizontal_margin</item>
        <item name="android:textColor">@android:color/primary_text_light_nodisable</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Text theme for Score Board. -->
    <style name="ScoreTextTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">56sp</item>
    </style>

    <!-- Button Style theme for all buttons. -->
    <style name="ButtonTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
    </style>

</resources>