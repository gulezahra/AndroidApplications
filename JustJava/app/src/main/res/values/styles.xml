<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <!-- App branding color for the app bar. -->
        <item name="colorPrimary">#AC7777</item>
        <!-- Darker variant for the status bar and contextual app bars. -->
        <item name="colorPrimaryDark">#8E5F5F</item>
        <!-- Theme UI controls the check boxes and textFields -->
        <item name="colorAccent">#C2AAAA</item>
    </style>

    <!-- Style for a header TextView -->
    <style name="HeaderTextStyle">
        <!-- Customize your theme here. -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#8E5F5F</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!-- Style for button Views -->
    <style name="ButtonStyle">
        <!-- Customize your theme here. -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#000000</item>
        <item name="android:background">#AC7777</item>
    </style>

</resources>
